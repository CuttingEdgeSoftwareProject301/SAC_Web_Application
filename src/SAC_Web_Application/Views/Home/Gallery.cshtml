
@{
    ViewData["Title"] = "Gallery";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>
<style>
    ul {
        padding: 0 0 0 0;
        margin: 0 0 0 0;
    }

        .row li {
            list-style: none;
            margin-bottom: 11px;
        }

            ul li img {
                cursor: pointer;
                width:200px;
                height:200px;
            }


    .modal-body {
        padding: 5px !important;
    }

    .modal-content {
        border-radius: 0;
    }

    .modal-dialog img {
        text-align: center;
        margin: 0 auto;
    }

    .controls {
        width: 50px;
        display: block;
        font-size: 11px;
        padding-top: 8px;
        font-weight: bold;
    }

    .next {
        float: right;
        text-align: right;
    }
</style>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<script src="~/js/photo-gallery.js"></script>
<ul class="row">
    <li class="col-lg-2 col-md-2 col-sm-3 col-xs-4">
        <img class="img-responsive" src="~/images/Gallery/1.jpg" />
    </li>
    <li class="col-lg-2 col-md-2 col-sm-3 col-xs-4">
        <img class="img-responsive" src="~/images/Gallery/2.jpg">
    </li>
    <li class="col-lg-2 col-md-2 col-sm-3 col-xs-4">
        <img class="img-responsive" src="~/images/Gallery/3.jpg" />
    </li>
    <li class="col-lg-2 col-md-2 col-sm-3 col-xs-4">
        <img class="img-responsive" src="~/images/Gallery/7.jpg" />
    </li>
    <li class="col-lg-2 col-md-2 col-sm-3 col-xs-4">
        <img class="img-responsive"src="~/images/Gallery/5.jpg" />
    </li>
    <li class="col-lg-2 col-md-2 col-sm-3 col-xs-4">
        <img class="img-responsive" src="~/images/Gallery/6.jpg" />
    </li>
    <li class="col-lg-2 col-md-2 col-sm-3 col-xs-4">
    <img class="img-responsive" src="~/images/Gallery/7.jpg" />
    </li>
</ul>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-body"> </div>
    </div>
</div>
</div>

