@model SAC_Web_Application.Models.ClubModel.Qualifications

@{
    ViewData["Title"] = "Create";
}

<h2>Create a New Qualification</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="QualName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="QualName" class="form-control" />
                <span asp-validation-for="QualName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
