@model IEnumerable<SAC_Web_Application.Models.ClubModel.Qualifications>

@{
    ViewData["Title"] = "Index";
}

<h2>SAC Qualifications</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Add a New Qualification</a>
</p>
<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Qualifications List</strong>
    </div>

    <table class="table table-hover table-responsive table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.QualName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.QualName)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.QualID" class="btn btn-xs btn-primary ">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.QualID" class="btn btn-xs btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.QualID" class="btn btn-xs btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="form-group">
    <div>
        <a asp-area="" asp-controller="Home" asp-action="Admin" class="btn btn-primary">Back</a>
    </div>
</div>
