@model SAC_Web_Application.Models.GroupSMSModel.GroupSMSViewModel

@{
    ViewData["Title"] = "GroupSMS";

    SelectList ddlCategories = (SelectList)ViewData["Categories"];
}

<h2>Group SMS</h2>

<form asp-controller="GroupSMS" asp-action="SendSms" method="get">
    <div class="form-horizontal">
        <hr />
        @*@<div asp-validation-summary="ModelOnly" class="text-success"></div>*@
        <div class="form-group">
            <label asp-for="SMSTo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="SMSTo" asp-items="@ddlCategories" class="form-control"></select>
            </div>
        </div>        
        <div class="form-group">
            <label asp-for="SMSContent" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="SMSContent" class="form-control" style="height:150px"></textarea>
                <span asp-validation-for="SMSContent" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input asp-for="SMSTo" type="hidden" class="form-control" />
                <span asp-validation-for="SMSTo" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a asp-area="" asp-controller="Home" asp-action="Admin" class="btn btn-primary">Admin</a>
                <input id="btnSend" type="submit" value="Send"  class="btn btn-success" />
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}