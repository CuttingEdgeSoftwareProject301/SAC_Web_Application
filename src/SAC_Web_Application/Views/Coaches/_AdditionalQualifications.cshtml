@model IEnumerable<SAC_Web_Application.Models.ClubModel.Qualifications>

<div class="panel panel-danger">
    <div class="panel-heading h3">SAC Qualifications</div>
    <div class="panel-body">
        <table class="table table-hover table-responsive table-condensed">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.QualName)
                    </th>
                 
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.QualName)
                        </td>
                        <td style="margin-right: -1em">
                            @Html.ActionLink("Add", "CoachAssignQual", "Coaches", new { coachID = ViewData["CoachID"], qualID = item.QualID }, new { @class = "btn btn-success btn-xs"  } )
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    </div>
</div>


